@using homeworkFeb7.Models
@model SearchResultsViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SearchResults</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div>
        <div class="mt-5 container">
            <form action="/northwind/searchresults">
                <div class="row">
                    <div class="offset-2 col-md-2">
                        <input value="@Model.min" type="text" class="form-control" name="min" placeholder="min" />
                    </div>
                    <div class="col-md-2">
                        <input value="@Model.max" type="text" class="form-control" name="max" placeholder="max" />
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success w-100">Search</button>
                    </div>
                </div>
            </form>
            <div class="row mt-5">
                <div class="col-md-12">
                    <table class="table table-hover table-border table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Units in stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product p in Model.products)
                            {
                                <tr>
                                    <td>@p.Id</td>
                                    <td>@p.Name</td>
                                    <td>@p.UnitsInStock</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
